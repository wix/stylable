{
  "name": "stylable",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g ./packages/*/{dist,cjs,esm}",
    "build": "tsc --build && node scripts/build.js",
    "build:dev": "tsc --build",
    "watch": "tsc --build -w",
    "lint": "eslint",
    "pretest": "npm run build",
    "test": "node --enable-source-maps scripts/test-runner.js --parallel",
    "test:integrations": "npm run test -- --i",
    "test:core-packages": "npm run test -- --cp",
    "test:coverage:dev": "npm run build && c8 -x 'packages/*/dist/test' -r html-spa npm run test && serve coverage",
    "prettify": "prettier . --write"
  },
  "devDependencies": {
    "@file-services/memory": "^9.4.1",
    "@file-services/node": "^9.4.1",
    "@file-services/path": "^9.4.1",
    "@file-services/types": "^9.4.1",
    "@rollup/plugin-html": "^1.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@types/chai": "^4.3.19",
    "@types/chai-subset": "^1.3.5",
    "@types/css-selector-tokenizer": "^0.7.4",
    "@types/cssesc": "^3.0.2",
    "@types/find-config": "^1.0.4",
    "@types/flat": "^5.0.5",
    "@types/js-beautify": "^1.14.3",
    "@types/json-schema": "^7.0.15",
    "@types/lodash.camelcase": "^4.3.9",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/lodash.clonedeepwith": "^4.5.9",
    "@types/lodash.upperfirst": "^4.3.9",
    "@types/mime": "^3.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20",
    "@types/postcss-safe-parser": "^5.0.4",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/validate-npm-package-name": "^4.0.2",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/rule-tester": "^8.18.1",
    "autoprefixer": "^10.4.20",
    "c8": "^10.1.3",
    "chai": "^4.3.10",
    "chai-subset": "^1.6.0",
    "create-listening-server": "^2.1.0",
    "css-loader": "^7.1.2",
    "esbuild": "^0.24.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "mocha": "^11.0.1",
    "node-eval": "^2.0.0",
    "playwright-chromium": "^1.49.1",
    "playwright-core": "^1.49.1",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "promise-assist": "^2.0.1",
    "raw-loader": "^4.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^5.0.7",
    "rollup": "^4.28.1",
    "source-map": "^0.7.4",
    "source-map-loader": "^5.0.0",
    "style-loader": "^4.0.0",
    "ts-expect": "^1.3.0",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.18.1",
    "url-loader": "^4.1.1",
