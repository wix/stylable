{
  "name": "@stylable/module-utils",
  "version": "1.0.0",
  "description": "Stylable module creation utilities",
  "main": "cjs/index.js",
  "types": "cjs/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs",
    "build": "ts-build ./src --cjs",
    "lint": "run-p lint:src lint:test",
    "lint:src": "tslint -p ./src",
    "lint:test": "tslint -p ./test",
    "test": "mocha -r @ts-tools/node/r \"test/**/*.spec.ts?(x)\" --watch-extensions ts,tsx",
    "prepack": "yarn build"
  },
  "dependencies": {
    "@stylable/core": "^1.0.0"
  },
  "files": [
    "src",
    "!src/tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/wix/stylable/tree/master/packages/module-utils",
  "author": "Wix.com",
  "license": "BSD-3-Clause"
}
