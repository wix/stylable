{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "interface-name": false,
        "trailing-comma": {
            "options": {
                "multiline": "never",
                "singleline": "never"
            }
        },
        "arrow-parens": {
            "options": [
                "ban-single-arg-parens"
            ]
        },
        "function-constructor": false,
        "variable-name": false,
        "forin": false,
        "quotemark": {
            "options": [
                "single",
                "avoid-escape",
                "jsx-double"
            ]
        },
        "no-var-requires": false,
        "no-console": false,
        "no-bitwise": false,
        "object-literal-sort-keys": false,
        "no-shadowed-variable": false,
        "max-classes-per-file": false
    },
    "rulesDirectory": []
}